{
    "name": "axleus/htmx",
    "description": "provides basic htmx support for laminas view and laminas form",
    "license": "BSD-3-Clause",
    "keywords": [
        "axleus",
        "mezzio",
        "htmx"
    ],
    "authors": [
        {
            "name": "Joey Smith",
            "email": "jsmith@webinertia.net",
            "homepage": "https://github.com/axleus/htmx/discussions"
        }
    ],
    "suggest": {
    },
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0 || ~8.4.0",
        "laminas/laminas-eventmanager": "^3.13.1"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.5",
        "phpunit/phpunit": "^10.2",
        "psalm/plugin-phpunit": "^0.18.4",
        "roave/security-advisories": "dev-master",
        "vimeo/psalm": "^5.14"
    },
    "extra": {
        "laminas": {
            "module": "Htmx",
            "config-provider": "Htmx\\ConfigProvider"
        }
    },
    "autoload": {
        "psr-4": {
            "Htmx\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Htmx\\Test\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --shepherd --stats",
        "test": "phpunit --colors=always --testsuite \"unit test\"",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "test-integration": "phpunit --colors=always --testsuite \"integration test\""
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.99"
        },
        "allow-plugins": {
            "laminas/laminas-component-installer": true,
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
